<h1>Listing servers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @servers.each do |server| %>
      <tr>
        <td><%= server.name %></td>
        <td><%= server.description %></td>
        <td><%= server.user_id %></td>
        <td>
          <%= link_to 'Show', server %>
        </td>
        <td>
          <% if is_mine(server) %>
            <%= link_to 'Edit', edit_server_path(server) %>
          <% end %>
        </td>
        <td>
          <% if is_mine(server) %>
            <%= link_to 'Destroy', server, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>